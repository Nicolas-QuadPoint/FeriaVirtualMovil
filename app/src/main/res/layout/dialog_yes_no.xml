<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/txtDlgTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="@string/err_mes_question"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDlgMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/txtDlgTitle"
        app:layout_constraintStart_toStartOf="@+id/txtDlgTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtDlgTitle"
        tools:text="@string/err_mes_message" />

    <Button
        android:id="@+id/btnDlgYes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="@string/action_yes"
        app:layout_constraintEnd_toStartOf="@+id/btnDlgNo"
        app:layout_constraintStart_toStartOf="@+id/txtDlgMsg"
        app:layout_constraintTop_toBottomOf="@+id/txtDlgMsg" />

    <Button
        android:id="@+id/btnDlgNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/action_no"
        app:layout_constraintEnd_toEndOf="@+id/txtDlgMsg"
        app:layout_constraintStart_toEndOf="@+id/btnDlgYes"
        app:layout_constraintTop_toTopOf="@+id/btnDlgYes" />

</androidx.constraintlayout.widget.ConstraintLayout>